<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:AppRpgEtec.Converters"
             x:Class="AppRpgEtec.Views.Disputas.ListagemDisputaView"
             Title="ListagemDisputaView">

    <!-- ✅ REGISTRO DOS CONVERTERS -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:PontosVidaConverter x:Key="PontosVidaConverter" />
            
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- ✅ BARRA DE TÍTULO -->
    <Shell.TitleView>
        <Button Command="{Binding NovoPersonagemCommand}"
                Text="Novo"
                HorizontalOptions="FillAndExpand"/>
    </Shell.TitleView>

    <!-- ✅ CONTEÚDO PRINCIPAL -->
    <ScrollView>
        <VerticalStackLayout Padding="10, 0, 0, 0" VerticalOptions="FillAndExpand">

            <Button Text="Zerar Ranking Geral"
                    Command="{Binding ZerarRankingRestaurarVidasGeralCommand}"
                    FontAttributes="Bold"
                    VerticalOptions="FillAndExpand"/>

            <ListView x:Name="listView"
                      HasUnevenRows="True"
                      ItemsSource="{Binding Personagens}"
                      SelectedItem="{Binding PersonagemSelecionado}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <!-- ✅ AÇÃO DE CONTEXTO PARA REMOVER -->
                            <ViewCell.ContextActions>
                                <MenuItem Text="Remover"
                                          IsDestructive="True"
                                          Command="{Binding Path=BindingContext.RemoverPersonagemCommand, Source={x:Reference listView}}"
                                          CommandParameter="{Binding .}" />
                            </ViewCell.ContextActions>

                            <!-- ✅ LAYOUT DE CADA ITEM -->
                            <Grid Padding="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- ✅ COR COM CONVERTER -->
                                <BoxView Grid.RowSpan="2"
                                         HeightRequest="50"
                                         WidthRequest="20"
                                         Color="{Binding PontosVida, Converter={StaticResource PontosVidaColorConverter}}"/>

                                <!-- ✅ NOME -->
                                <Label Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding Nome}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>

                                <!-- ✅ PONTOS DE VIDA FORMATADOS COM CONVERTER -->
                                <Label Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding PontosVida, Converter={StaticResource PontosVidaConverter}}"
                                       FontSize="14"/>
                            </Grid>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
